{
    "name": "smithery-plugin-json",
    "version": "0.1.1",
    "author": "Adrian Marten",
    "repository": {
        "type": "git",
        "url": "https://github.com/tabris87/smithery-plugin-json.git"
    },
    "license": "Apache-2.0",
    "description": "A plugin for smithery to support feature oriented programming with JSON",
    "type": "module",
    "scripts": {
        "test": "mocha \"test/*.spec.js\" --diff --reporter spec --reporter mochawesome --reporter-options reportDir=reports/test-results,reportFilename=testResults",
        "test-single": "mocha --diff --reporter spec ",
        "test-debug": "mocha --inspect-brk \"test/*.spec.js\"",
        "test-debug-single": "mocha --inspect-brk"
    },
    "main": "index.js",
    "dependencies": {
        "escodegen": "^1.12.1",
        "espree": "^6.1.2",
        "estraverse": "^5.2.0",
        "estree-walker": "^2.0.2"
    },
    "devDependencies": {
        "chai": "^4.3.4",
        "chai-exclude": "^2.0.3",
        "jest": "^25.1.0",
        "jest-html-reporters": "^1.2.1",
        "mocha": "^9.0.2",
        "mochawesome": "^6.2.2",
        "smithery": "file:../smithery/smithery-core/smithery-0.6.2.tgz",
        "smithery-equipment": "^0.1.1"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "test"
        ],
        "collectCoverage": true,
        "coverageReporters": [
            "text",
            "html"
        ],
        "reporters": [
            "default",
            [
                "jest-html-reporters",
                {
                    "filename": "./test/latestTests.html",
                    "expand": false,
                    "pageTitle": "featureJS-plugin-JSON",
                    "hideIcon": true
                }
            ]
        ]
    }
}
