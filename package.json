{
    "name": "featurejs-plugin-json",
    "version": "0.1.0",
    "description": "a test plugin to provide a way to create a suitable plugin system",
    "main": "index.js",
    "author": "Adrian Marten",
    "license": "MIT",
    "scripts": {
        "test": "jest --runInBand"
    },
    "dependencies": {
        "escodegen": "^1.12.1",
        "espree": "^6.1.2"
    },
    "devDependencies": {
        "featureJS": "git+https://github.com/tabris87/featureJS.git",
        "featurecli-commons": "git+https://github.com/tabris87/featureCLI-commons.git#master",
        "jest": "^25.1.0",
        "jest-html-reporters": "^1.2.1"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "test"
        ],
        "collectCoverage": true,
        "coverageReporters": [
            "text",
            "html"
        ],
        "reporters": [
            "default",
            [
                "jest-html-reporters",
                {
                    "filename": "./test/latestTests.html",
                    "expand": false,
                    "pageTitle": "featureJS-plugin-JSON",
                    "hideIcon": true
                }
            ]
        ]
    }
}
