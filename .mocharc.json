{
    "diff": true,
    "extension": [
        "spec.js"
    ],
    "spec": [
        "test/**/*.spec.js",
        "lib/**/*.spec.js"
    ],
    "ignore": [
        "node_modules",
        "index.js"
    ],
    "package": "./package.json",
    "reporter": [
        "spec",
        "mochawesome"
    ],
    "reporter-option": [
        "reportDir=reports/test-results",
        "reportFilename=testResults"
    ]
}